{
  "name": "easychart",
  "version": "3.0.0",
  "description": "Easychart is a graphical user interface, built on top of the stunning Highcharts-javascript library",
  "main": "dist/easychart.js",
  "dependencies": {
    "highcharts": "0.0.10",
    "highcharts-browserify": "^2.0.2"
  },
  "devDependencies": {
    "drag-drop": "^2.3.1",
    "dom-delegator": "^13.1.0",
    "node-neat": "^1.7.2",
    "bourbon-neat": "^1.7.2",
    "browserify": "^12.0.1",
    "browserify-css": "^0.8.1",
    "browserify-data": "^0.2.0",
    "folderify": "^1.1.0",
    "node-sass": "latest",
    "lodash": "^3.10.1",
    "mediatorjs": "^0.1.4",
    "npm": "^3.4.1",
    "papaparse": "^4.1.2",
    "svg-browserify": "0.0.2",
    "vdom-virtualize": "^1.0.1",
    "virtual-dom": "^2.1.1",
    "strictify": "latest",
    "uglify-js": "latest",
    "nodemon": "latest",
    "main-loop": "^3.2.0"
  },
  "scripts": {
    "build:main:bundle": "browserify src/js/main.js -o dist/easychart.js",
    "build:main:uglify": "uglifyjs dist/easychart.js -c -o dist/easychart.js",
    "build:main:disc": "browserify --full-paths src/js/main.js -o dist/easychart.js && npm run build:main:uglify",
    "build:main": "npm run build:main:bundle",
    "build:styles": "node-sass src/scss/style.scss --include-path node_modules/bourbon/app/assets/stylesheets --include-path node_modules/bourbon-neat/app/assets/stylesheets -o ./dist/css",
    "build": "npm run build:main && npm run build:styles",
    "watch:main": "nodemon -e js -w src/js -i dist/easychart.js -x 'npm run build:main:bundle'",
    "watch:styles": "nodemon -e scss -w src/scss -x 'npm run build:styles'",
    "watch": "npm run watch:main & npm run watch:styles",
    "genOptions": "node src/js/buildCustomise"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/bestuurszaken/easychart.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bestuurszaken/easychart/issues"
  },
  "browserify": {
    "transform": [
      "browserify-css",
      "browserify-data",
      "svg-browserify",
      "folderify"
    ],
    "no-parse": [
      "lodash"
    ]
  }
}
