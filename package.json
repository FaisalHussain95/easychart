{
  "name": "easychart",
  "version": "3.0.0",
  "description": "Easychart is a graphical user interface, built on top of the stunning Highcharts-javascript library",
  "main": "dist/easychart.js",
  "dependencies": {
    "browserify": "^12.0.1",
    "browserify-css": "^0.8.1",
    "browserify-data": "^0.2.0",
    "crel": "^2.1.8",
    "folderify": "^1.1.0",
    "highcharts": "0.0.10",
    "highcharts-browserify": "^2.0.2",
    "lodash": "^3.10.1",
    "mediatorjs": "^0.1.4",
    "node-sass": "^3.4.2",
    "papaparse": "^4.1.2",
    "stateman": "^0.2.0",
    "svg-browserify": "0.0.2",
    "watchify": "^3.6.1"
  },
  "scripts": {
    "build-js": "browserify src/js/main.js -o dist/easychart.js -v",
    "watch-js": "watchify src/js/main.js -o dist/easychart.js -v",
    "build-css": "node-sass src/scss/style.scss > src/css/style.css",
    "watch-css": "node-sass src/scss/style.scss > src/css/style.css --watch",
    "build-assets": "npm run build-js & npm run build-css",
    "watch-assets": "npm run watch-js & npm run watch-css"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/bestuurszaken/easychart.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bestuurszaken/easychart/issues"
  },
  "browserify": {
    "transform": [
      "browserify-css",
      "browserify-data",
      "svg-browserify",
      "folderify"
    ]
  },
  "watchify": {
    "transform": [
      "browserify-css",
      "browserify-data",
      "svg-browserify",
      "folderify"
    ]
  }
}
